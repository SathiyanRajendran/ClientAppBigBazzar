@model ClientAppBigBazzar.Models.Carts

@{
    ViewData["Title"] = "AddToCart";
    Layout = "_CustomerLogin";
}
<h2 class="text-center">Hello @ViewBag.CustomerName!  It`s a Temporary Place to store your list of items</h2>



<h4>Carts</h4>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row row d-flex aligns-items-center justify-content-center">
            <div class="col-md-6 card p-3 px-5 py-5 mt-3 bg-grad" style="background-color:cadetblue">
           <form asp-action="AddToCart" class="row g-6">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            
            <div class="form-group">
                <label style="color:black" asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                  <br/>
                <input type="submit" value="AddToCart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
