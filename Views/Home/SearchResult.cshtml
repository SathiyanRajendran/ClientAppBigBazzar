@model IEnumerable<ClientAppBigBazzar.Models.Products>


@{
    ViewData["Title"] = "SearchResult";
    ViewData["CustomerView"] = false;
    ViewData["TraderView"] = false;
    ViewData["SearchResult"] = true;


}  

   
<h3>Search Result</h3>  
<partial name="_ProductsPartial" Models="Products" view-data="ViewData"></partial>
<form asp-controller="Customers" asp-action="CustomerLogin">
    <div class="form-group">
         <input  type="submit" value="Purchase" class="btn btn-primary" />
    </div>
</form>
  @if (Model.Count() == 0)
        { 
            <tr> 
            <td> <h2 style="background-color:indianred">No suitable results found for your Search<i class="fa-solid fa-message-exclamation"></i></h2> </td>  
            </tr >  
         }
