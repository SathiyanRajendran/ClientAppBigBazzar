@model ClientAppBigBazzar.Models.Products

@{
    ViewData["Title"] = "EditProducts";
        Layout = "_CustomerLogin";

}
<h1 class="text-center">Hello @ViewBag.TraderName! Welcome</h1>



 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row row d-flex aligns-items-center justify-content-center">
            <div class="col-md-6 card p-3 px-5 py-5 mt-3 bg-grad" style="background-color:cadetblue">
           <form asp-action="EditProducts" class="row g-6">
            <div class="form-group">
               
                <input asp-for="ProductId" type="hidden"/>
            </div>
            <div class="form-group">
                <label style="color:black" asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:black" asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:black" asp-for="ProductImage" class="control-label"></label>
                <input asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:black" asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:black" asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control"asp-items="ViewBag.CategoryList as SelectList"><option>Select Category</option></select>
            </div>
           
            <div class="form-group">
                                <br/>

                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
